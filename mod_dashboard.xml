			</fieldset>
			<fieldset name="custom_tab" label="MOD_DASHBOARD_CUSTOM_TAB" description="MOD_DASHBOARD_CUSTOM_TAB_DESC">
				<field name="nametab" type="text" default="MOD_DASHBOARD_CUSTOM_TAB_NAME" label="MOD_DASHBOARD_NAME_TAB" description="MOD_DASHBOARD_NAME_TAB_DESC" parentclass="span-2 stack"/>
