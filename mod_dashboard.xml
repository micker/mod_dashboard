					<option value="1">JYES</option>
				</field>

				<field name="force_fullwidth" type="radio" default="1" label="MOD_DASHBOARD_FORCE_FULLWIDTH" description="MOD_DASHBOARD_FORCE_FULLWIDTH_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="displaycustomtext" type="radio" default="0" label="MOD_DASHBOARD_DISPLAY_CUSTOMTEXT" description="MOD_DASHBOARD_DISPLAY_CUSTOMTEXT_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
