				<field name="hiddebuttonmanagefieldsarticle" type="radio" default="1" label="MOD_DASHBOARD_DISPLAYBUTTON_HIDDEBUTTONU_ARTICLE_FIELD" description="MOD_DASHBOARD_DISPLAYBUTTON_HIDDEBUTTON_ARTICLE_FIELdD_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
					<option value="0">JNO</option>
