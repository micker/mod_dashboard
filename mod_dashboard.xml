					<option value="3">3</option>
					<option value="5">5</option>
					<option value="10">10</option>
					<option value="15">15</option>
					<option value="20">20</option>
					<option value="50">50</option>
					<option value="100">100</option>
				</field>
				<field name="forceheightblock" type="text" default="" size="50" label="MOD_DASHBOARD_BLOCKHEIGHT" description="MOD_DASHBOARD_BLOCKHEIGHT_DESC" parentclass="span-2 stack"/>
				<field name="hiddefeatured" type="radio" default="1" label="MOD_DASHBOARD_DISPLAYBLOCK_FEATURED" description="MOD_DASHBOARD_DISPLAYBLOCK_FEATURED_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
