				<field name= "add_cat_button" description= "MOD_DASHBOARD_CAT_FILTERING_DESC" type= "subform" label= "MOD_DASHBOARD_CAT_FILTERING" min= "0" max= "1000" required= "false" formsource= "administrator/modules/mod_dashboard/models/forms/addcatbutton.xml" multiple= "true" buttons= "add,remove,move" layout="joomla.form.field.subform.repeatable" groupByFieldset="false" parentclass="span-6 stack"/>

