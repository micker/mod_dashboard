				<field name="displaymanagetab" type="radio" default="1" label="MOD_DASHBOARD_TABS_MANAGE" description="MOD_DASHBOARD_TABS_MANAGE_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
