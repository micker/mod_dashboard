					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>

				<field name="hiddebuttonmanageauthors" type="radio" default="1" label="MOD_DASHBOARD_DISPLAYBUTTON_HIDDEBUTTONMANAGEAUTHORS" description="MOD_DASHBOARD_DISPLAYBUTTON_HIDDEBUTTONMANAGEAUTHORS_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
