					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="trashedwidth" type="number" default="44" label="MOD_DASHBOARD_WIDTHCOL" description="MOD_DASHBOARD_WIDTHCOL_DESC" min="0" max="100" step="5" showon="hiddetrashed:1" parentclass="span-2-inline stack"/>
				<field name="actionsloglist" type="radio" default="0" label="MOD_DASHBOARD_ADD_ACTIONSBLOCK" description="MOD_DASHBOARD_ADD_ACTIONSBLOCK_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
