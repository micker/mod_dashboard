					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="hiddebuttonaddgroup" type="radio" default="1" label="MOD_DASHBOARD_DISPLAYBUTTON_ADDGROUP" description="MOD_DASHBOARD_DISPLAYBUTTON_ADDGROUP_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
