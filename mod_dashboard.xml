				<field name="hiddebuttonmanagegroups" type="radio" default="1" label="MOD_DASHBOARD_DISPLAYBUTTON_HIDDEBUTTONMANAGEGROUPS" description="MOD_DASHBOARD_DISPLAYBUTTON_HIDDEBUTTONMANAGEGROUPS_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
					<option value="0">JNO</option>
