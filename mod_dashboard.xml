					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="displaycreattab" type="radio" default="1" label="MOD_DASHBOARD_TABS_CREATE" description="MOD_DASHBOARD_TABS_CREATE_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
