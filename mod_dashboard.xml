					<option value="1">JYES</option>
				</field>
				<field name="featuredwidth" type="number" default="44" label="MOD_DASHBOARD_WIDTHCOL" description="MOD_DASHBOARD_WIDTHCOL_DESC" min="0" max="100" step="5" showon="hiddefeatured:1" parentclass="span-2-inline stack"/>
				<field name="hiddepublished" type="radio" default="1" label="MOD_DASHBOARD_DISPLAYBLOCK_PUBLISHED" description="MOD_DASHBOARD_DISPLAYBLOCK_PUBLISHED_DESC" layout="joomla.form.field.radio.switcher" parentclass="span-2 stack">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="publishedwidth" type="number" default="44" label="MOD_DASHBOARD_WIDTHCOL" description="MOD_DASHBOARD_WIDTHCOL_DESC" min="0" max="100" step="5" showon="hiddepublished:1" parentclass="span-2-inline stack"/>
